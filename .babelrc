{
  "presets": [
    [
      "@babel/preset-react",
      {
        "runtime": "automatic"
      }
    ],
    ["@babel/preset-env", { "targets": { "node": "current" } }],
    "@babel/preset-typescript"
  ],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./src"],
        "alias": {
          "@components": "./src/components",
          "@constants": "./src/constants",
          "@events": "./src/events",
          "@helpers": "./src/helpers",
          "@lib": "./src/lib",
          "@shapes": "./src/shapes"
        }
      }
    ]
  ]
}
