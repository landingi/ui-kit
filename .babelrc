{
  "presets": [
    "@babel/preset-react",
    ["@babel/preset-env", { "targets": { "node": "current" } }]
  ],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./src"],
        "alias": {
          "@components": "./src/components",
          "@constants": "./src/constants",
          "@events": "./src/events",
          "@helpers": "./src/helpers",
          "@i18n": "./src/i18n",
          "@lib": "./src/lib",
          "@shapes": "./src/shapes",
          "@store": "./src/store",
          "@jestutils": "./config/tests/jest/utils.js",
          "@jestmocks": "./config/tests/jest/setup"
        }
      }
    ]
  ]
}
